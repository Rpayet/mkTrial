    <body class="bg-neutral-200">

        <header class="max-w-6xl mx-auto bg-shell rounded-b-3xl text-white font-bold">

            <nav class="flex justify-between items-center py-4 mx-20">
                <div class="flex w-2/5 items-center gap-4">
                    <img 
                        src="/assets/admin/img/icons/Logo.png"
                        alt="logo">
                    <a 
                        
                        href="{{ path('app_home') }}" 
                        class="">
                        Accueil</a>
                    <a 
                        href="{{ path('app_tournament') }}" 
                        class="">
                        Tournois</a>
                </div>

                <div class="">
                    {% if app.user %}
                        <div class="flex items-center gap-4">
                            {% if app.user.picture %}
                                <img 
                                src="/assets/user/img/{{ app.user.picture }}"
                                alt="{{ app.user.name }}" 
                                class="w-10 rounded-full border-solid border-2 border-white">
                            {% else %}
                                <img 
                                src="/assets/admin/img/icons/Default.png"
                                alt="{{ app.user.name }}" 
                                class="w-10 rounded-full border-solid border-2 border-white">
                            {% endif %}
                            
                            <a 
                                class="block"
                                href="#">{{ app.user.name }}</a>
                        </div>
                    {% else %}
                        <div class="">
                            <a href="{{ path('app_login') }}">Connexion</a>
                        </div>
                        
                    {% endif %}
                </div>

            </nav>
        
        </header>

