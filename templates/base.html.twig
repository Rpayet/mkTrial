<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MK Trial{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-neutral-200">

        <header class="max-w-6xl mx-auto bg-shell rounded-b-3xl text-white font-bold">

            <nav class="flex justify-between items-center py-4 mx-20">
                <div class="flex w-2/5 items-center gap-4">
                    <img 
                        src="/assets/admin/img/icons/Logo.png"
                        alt="logo">
                    <a 
                        
                        href="{{ path('app_home') }}" 
                        class="">
                        Accueil</a>
                    <a 
                        href="{{ path('app_tournament') }}" 
                        class="">
                        Tournois</a>
                </div>

                <div class="">
                    {% if app.user %}
                        <div class="flex items-center gap-4">
                            {% if app.user.picture %}
                                <img 
                                src="/assets/user/img/{{ app.user.picture }}"
                                alt="{{ app.user.name }}" 
                                class="w-10 rounded-full border-solid border-2 border-white">
                            {% else %}
                                <img 
                                src="/assets/admin/img/icons/Default.png"
                                alt="{{ app.user.name }}" 
                                class="w-10 rounded-full border-solid border-2 border-white">
                            {% endif %}
                            
                            <a 
                                class="block"
                                href="#">{{ app.user.name }}</a>
                        </div>
                    {% else %}
                        <div class="">
                            <a href="{{ path('app_login') }}">Connexion</a>
                        </div>
                        
                    {% endif %}
                </div>

            </nav>
        
        </header>

        <div class="max-w-4xl mx-auto">
            {% block body %}{% endblock %}
        </div>

        <footer
            class="max-w-6xl mx-auto rounded-t-3xl bg-shell text-center text-white">
            <div class="p-4">
                <p>2023 - MK Trial</p>
            </div>
        </footer>
    </body>
</html>
