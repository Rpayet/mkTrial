{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<form method="post" class="my-20 w-3/5 mx-auto bg-white rounded-lg p-20 flex flex-col gap-y-4">
		{% if error %}
			<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-3 rounded relative">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}" class="text-blue-600 hover:underline">DÃ©connexion</a>
			</div>
		{% endif %}

		<label for="inputEmail" class="block font-medium mb-1">Email</label>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="border-gray-300 focus:ring-2 focus:ring-blue-500 rounded-md shadow-sm py-2 px-4 block w-full sm:text-sm border-2" autocomplete="email" required autofocus>
		<label for="inputPassword" class="block font-medium mb-1">Mot de passe</label>
		<input type="password" name="password" id="inputPassword" class="border-gray-300 focus:ring-2 focus:ring-blue-500 rounded-md shadow-sm py-2 px-4 block w-full sm:text-sm border-2" autocomplete="current-password" required>

		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		
		    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		    See https://symfony.com/doc/current/security/remember_me.html #}
		
		    <div class="checkbox mb-3">
		        <label>
		            <input type="checkbox" name="_remember_me"> Se souvenir de moi
		        </label>
		    </div>
		

		<button 
            class="bg-blue-500 hover:bg-blue-600 text-white 
                    font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue" 
            type="submit">
			Connexion
		</button>
	</form>
{% endblock %}
